<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_graph"
    app:startDestination="@id/homeScreen">
    <fragment
        android:id="@+id/homeScreen"
        android:name="com.example.mealplanner.presentation.homescreen.view.HomeScreen"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen">
        <action
            android:id="@+id/action_homeScreen_to_mealDetailsScreen"
            app:destination="@id/mealDetailsScreen" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.mealplanner.presentation.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.mealplanner.presentation.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.example.mealplanner.presentation.CalendarFragment"
        android:label="fragment_calendar"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.mealplanner.presentation.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/mealDetailsScreen"
        android:name="com.example.mealplanner.presentation.mealDetailScreen.view.MealDetailsScreen"
        android:label="fragment_meal_details_screen"
        tools:layout="@layout/fragment_meal_details_screen" >
        <argument
            android:name="mealDetails"
            app:argType="com.example.mealplanner.data.meal.model.MealDto" />
    </fragment>


</navigation>