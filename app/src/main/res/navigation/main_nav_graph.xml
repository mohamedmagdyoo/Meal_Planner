<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/lunchScreen"
        android:name="com.example.mealplanner.presentation.lunch.LunchScreen"
        android:label="fragment_lunch_screen"
        tools:layout="@layout/fragment_lunch_screen" >
        <action
            android:id="@+id/action_lunchScreen_to_logInScreen"
            app:destination="@id/logInScreen" />
        <action
            android:id="@+id/action_lunchScreen_to_signupScreen"
            app:destination="@id/signupScreen" />
    </fragment>
    <fragment
        android:id="@+id/logInScreen"
        android:name="com.example.mealplanner.presentation.login.view.LogInScreen"
        android:label="fragment_log_in_screen"
        tools:layout="@layout/fragment_log_in_screen" >
        <action
            android:id="@+id/action_logInScreen_to_welcomeScreen"
            app:destination="@id/welcomeScreen"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signupScreen"
        android:name="com.example.mealplanner.presentation.signup.view.SignupScreen"
        android:label="fragment_signup_screen"
        tools:layout="@layout/fragment_signup_screen" >
        <action
            android:id="@+id/action_signupScreen_to_welcomeScreen"
            app:destination="@id/welcomeScreen"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/welcomeScreen"
        android:name="com.example.mealplanner.presentation.WelcomeScreen"
        android:label="fragment_welcome_screen"
        tools:layout="@layout/fragment_welcome_screen" >
        <action
            android:id="@+id/action_welcomeScreen_to_bottom_nav_graph"
            app:destination="@id/bottom_nav_graph"
            app:launchSingleTop="true"
            app:popUpTo="@id/welcomeScreen"
            app:popUpToInclusive="false" />
    </fragment>
    <include app:graph="@navigation/bottom_nav_graph" />
    <fragment
        android:id="@+id/splash"
        android:name="com.example.mealplanner.Splash"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splash_to_lunchScreen"
            app:destination="@id/lunchScreen"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splash_to_welcomeScreen"
            app:destination="@id/welcomeScreen"
            app:popUpToInclusive="false" />
    </fragment>
</navigation>