<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_graph"
    app:startDestination="@id/homeScreen">
    <fragment
        android:id="@+id/homeScreen"
        android:name="com.example.mealplanner.presentation.homescreen.view.HomeScreen"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen">
        <action
            android:id="@+id/action_homeScreen_to_mealDetailsScreen"
            app:destination="@id/mealDetailsScreen"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.mealplanner.presentation.search.view.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_searchMeal"
            app:destination="@id/searchMeal"

            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.mealplanner.presentation.favscreen.view.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite">
        <action
            android:id="@+id/action_favoriteFragment_to_mealDetailsScreen"
            app:destination="@id/mealDetailsScreen" />
    </fragment>
    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.example.mealplanner.presentation.calendar.view.CalendarFragment"
        android:label="fragment_calendar"
        tools:layout="@layout/fragment_calendar" >
        <action
            android:id="@+id/action_calendarFragment_to_mealDetailsScreen"
            app:destination="@id/mealDetailsScreen" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.mealplanner.presentation.profile.view.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment"
            app:popUpTo="@id/profileFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_profileFragment_to_calendarFragment"
            app:destination="@id/calendarFragment"
            app:popUpTo="@id/profileFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mealDetailsScreen"
        android:name="com.example.mealplanner.presentation.mealDetailScreen.view.MealDetailsScreen"
        android:label="fragment_meal_details_screen"
        tools:layout="@layout/fragment_meal_details_screen">
        <argument
            android:name="mealDetails"
            app:argType="com.example.mealplanner.data.favMeals.model.meal.MealDto" />
    </fragment>
    <fragment
        android:id="@+id/searchMeal"
        android:name="com.example.mealplanner.presentation.searchmeal.view.SearchMeal"
        android:label="fragment_search_meal"
        tools:layout="@layout/fragment_search_meal">
        <argument
            android:name="key"
            app:argType="string" />
        <argument
            android:name="flag"
            app:argType="string" />
        <action
            android:id="@+id/action_searchMeal_to_mealDetailsScreen"
            app:destination="@id/mealDetailsScreen"

            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>


</navigation>